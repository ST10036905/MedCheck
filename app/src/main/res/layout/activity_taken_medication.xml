<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TakenMedication">

    <TextView
        android:id="@+id/todayDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24sp"
        android:textColor="@color/cafe"
        android:inputType="text"
        android:hint="Today's Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/calendar_today"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/todayDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Calendar button" />

    <TextView
        android:id="@+id/todayDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        android:textColor="@color/cafe"
        android:inputType="datetime"
        android:hint="Day"
        app:layout_constraintTop_toBottomOf="@+id/todayDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/taken"
        app:layout_constraintTop_toBottomOf="@+id/todayDateTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/takenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taken"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/textBlue"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/editTextContainer"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp">


        <EditText
            android:id="@+id/medicineNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medicine Name"
            android:inputType="text"
            android:background="@null"
            android:textSize="16sp"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp"/>

        <EditText
            android:id="@+id/medicineTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medicine Details"
            android:inputType="datetime"
            android:background="@null"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/cafe"
            android:drawableRight="@drawable/check"/>
    </LinearLayout>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>