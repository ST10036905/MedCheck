<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhatsNewOnMedCheck"
    android:background="@color/BgColor"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Title for What's New -->
        <TextView
            android:id="@+id/whats_new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_s_new_in_medcheck"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/caramel"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/BgColor"
            android:paddingBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="18dp">

        <!-- Feature 1: Medication Search -->
        <TextView
            android:id="@+id/feature_1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_for_medications"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/caramel"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feature_1_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_can_now_search"
            android:textSize="16sp"
            android:textColor="@color/BrownText"
            android:layout_marginBottom="16dp" />

        <!-- Feature 2: Refill Medications -->
        <TextView
            android:id="@+id/feature_2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refill_your_medications"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/caramel"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feature_2_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/with_just_a_few_clicks"
            android:textSize="16sp"
            android:textColor="@color/BrownText"
            android:layout_marginBottom="16dp" />

        <!-- Feature 3: Nearby Pharmacies -->
        <TextView
            android:id="@+id/feature_3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_for_nearby_pharmacies"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/caramel"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feature_3_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_the_nearest_pharmacies"
            android:textSize="16sp"
            android:textColor="@color/BrownText"
            android:layout_marginBottom="16dp" />

        <!-- Feature 4: Medication Reminders -->
        <TextView
            android:id="@+id/feature_4_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medication_reminders"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/caramel"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feature_4_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/never_forget_to_take"
            android:textSize="16sp"
            android:textColor="@color/BrownText"
            android:layout_marginBottom="16dp" />

        <!-- Feature 5: Track Dosages -->
        <TextView
            android:id="@+id/feature_5_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/track_your_dosages"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/caramel"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feature_5_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keep_track_of_your_dosage"
            android:textSize="16sp"
            android:textColor="@color/BrownText"
            android:layout_marginBottom="16dp" />


    </LinearLayout>
</ScrollView>
    </LinearLayout>
</ScrollView>