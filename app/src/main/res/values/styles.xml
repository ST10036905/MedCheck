<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavActiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavInactiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SpinnerTheme" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/m3_on_surface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- calendar style -->
    <style name="CalendarViewStyle" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/m3_primary</item>
        <item name="colorOnPrimary">@color/m3_on_primary</item>
    </style>

    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/m3_on_surface_variant</item>
    </style>

    <style name="CalendarDateTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/m3_on_surface</item>
    </style>

    <!-- other styles -->

    <!-- Base Material 3 Toolbar Style -->
    <style name="Widget.MedCheck.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.MedCheck.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MedCheck.Toolbar.Subtitle</item>
    </style>

    <!-- Primary Variant -->
    <style name="Widget.MedCheck.Toolbar.Primary" parent="Widget.MedCheck.Toolbar">
        <item name="android:background">@color/m3_primary</item>
        <item name="titleTextColor">@color/m3_on_primary</item>
        <item name="subtitleTextColor">@color/m3_on_primary</item>
    </style>

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.MedCheck.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.MedCheck.Toolbar.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Map style -->
    <style name="Widget.MedCheck.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveTabTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/InactiveTabTextStyle</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
    </style>

    <!-- Preferences styles -->
    <style name="PreferenceItemStyle" parent="Widget.AppCompat.TextView">
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/m3_primary</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <!-- Transactions -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>


</resources>